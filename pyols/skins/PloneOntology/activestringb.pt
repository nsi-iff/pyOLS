<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- ActiveString Widgets -->
    <metal:view_macro define-macro="view"
		      tal:replace="structure accessor" />

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
<div metal:fill-slot="widget_body">
	<input type="text"
	       name="SearchKWB"
	       value=""
	       id="SearchKWB"
	       size="30"
	       tabindex="#"
               onfocus="loadHandler(this)"
               onkeypress="activeStringStart(this)"
	       tal:attributes="value python: here.getSearchKWB();
	                       size widget/size;
	                       tabindex tabindex/next;"
	       />
           <input type="submit" name="form.button.search5" value="Search"/>
	    <tal:block tal:condition="python: request.get('SearchKWB','')">
	      <tal:block tal:define="results python:here.portal_classification.searchMatchingKeywordsFor(here,  request.get('SearchKWB',''), search_kw_proposals='true')">

		<div tal:condition="results">
		  <table> <!-- Table Header ??? -->
		    <tr tal:repeat="item results">
		      <tal:block tal:define="cururl request/URL; 
		                             s item/title_or_id; 
					     newurl string:${cururl}?fieldset=classification&searchterm=${s}">
		      <td><input type="radio" name="keywordb" tal:attributes="value python: item.UID()"/></td>

		      <td><a tal:attributes="href newurl" tal:content="item/title_or_id"/></td>
		      <td><span tal:replace="item/getKwDescription|item/getKeywordProposalDescription|nothing"/></td>
		      </tal:block>
		    </tr>
		  </table>
		  <input type="submit" name="form.button.sel3" value="Select"/><font color='#ff0000'><p i18n:translate="Ontology_select_before"> 'select' before 'save' or no keywords will be added</p> </font>
		</div>

		<p tal:condition="not:results" i18n:translate="Ontology_no_keywords">No matching keywords found. Please try another search term.</p>
	      </tal:block>
	    </tal:block>

	<div tal:attributes="id string:activeresult-${fieldName}" style="display: none;">
          <div tal:attributes="id string:activeresult-shadow-${fieldName}">
          </div>
        </div>
</div>
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/field/macros/edit">
      </div>
    </div>

  </body>

</html>


